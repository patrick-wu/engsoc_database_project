<div class = "row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @club do |f| %>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :category %>
        <%= f.text_area :category %>
      </p>
      <p>
        <%= f.label :email%>
        <%= f.text_field :email %>
      </p>

      <%= f.submit(@club.new_record? ? 'Register' : 'Edit Profile' ,class: "btn btn-success") %>
    <% end %>
  </div>
</div>
